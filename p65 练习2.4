#include <vector>
#include <string>
#include <iostream>
using namespace std;

const vector<int>* Pentagonal_seq(int pos)
{
	static vector<int> vec;
	if (pos <= 0 || pos > 64)
	{
		cout << pos << "位置不合法" << endl;
		return 0;
	}
	for (int ix = vec.size(); ix < pos; ix++)
	{
		vec.push_back((ix + 1)*(3 * (ix + 1) - 1) / 2);
	}
	return &vec;
}

bool seq_elem(int pos, int& elem)
{
	const vector<int>* p = Pentagonal_seq(pos);
	if (!p)
	{
		elem = 0;
		return false;
	}
	elem = (*p)[pos - 1];
	return true;
}

int main()
{
	int elem;
	if (seq_elem(0, elem))
	{
		cout << elem << endl;
	}
	if (seq_elem(4, elem))
	{
		cout << elem << endl;
	}
	if (seq_elem(15, elem))
	{
		cout << elem << endl;
	}
	if (seq_elem(100, elem))
	{
		cout << elem << endl;
	}
	return 0;
}
